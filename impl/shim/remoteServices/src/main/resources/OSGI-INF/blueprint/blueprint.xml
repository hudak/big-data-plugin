<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <bean id="namedClusterSupplier" class="org.pentaho.big.data.impl.shim.remote.NamedClusterSupplier">
    <argument>
      <reference interface="org.pentaho.big.data.api.cluster.NamedClusterService"/>
    </argument>
  </bean>

  <bean class="org.pentaho.big.data.impl.shim.remote.ClusterTracker" init-method="open" destroy-method="close">
    <argument ref="blueprintBundleContext"/>
    <argument ref="namedClusterSupplier"/>
  </bean>

  <bean class="org.pentaho.big.data.impl.shim.remote.FactoryTracker" init-method="open" destroy-method="close">
    <argument ref="blueprintBundleContext"/>
    <argument ref="namedClusterSupplier"/>
  </bean>

</blueprint>